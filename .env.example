# Proratio Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git!

# ============================================================================
# EXCHANGE API KEYS
# ============================================================================
# Binance API (https://www.binance.com/en/my/settings/api-management)
# IMPORTANT: Start with testnet, then use restricted API keys for live trading
# Testnet: https://testnet.binance.vision/

BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# Use testnet for paper trading
BINANCE_TESTNET=true

# ============================================================================
# AI / LLM API KEYS
# ============================================================================
# OpenAI (ChatGPT-4): https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic (Claude): https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Google (Gemini): https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your-google-api-key-here

# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL=postgresql://proratio:proratio_password@localhost:5432/proratio
REDIS_URL=redis://localhost:6379/0

# ============================================================================
# TELEGRAM ALERTS
# ============================================================================
# Get bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# ============================================================================
# TRADING CONFIGURATION
# ============================================================================
# Trading mode: dry_run or live
TRADING_MODE=dry_run

# Risk management
MAX_OPEN_TRADES=2
STAKE_AMOUNT=100  # USDT per trade
MAX_DRAWDOWN_PERCENT=10

# ============================================================================
# PRORATIO MODULES CONFIGURATION
# ============================================================================
# Proratio Core
DATA_REFRESH_INTERVAL=300  # seconds

# Proratio Signals
AI_CONSENSUS_THRESHOLD=0.6  # 0.0-1.0
ENABLE_CHATGPT=true
ENABLE_CLAUDE=true
ENABLE_GEMINI=true

# Proratio TradeHub
STRATEGY_MODE=trend_following  # trend_following, mean_reversion, grid
ENABLE_MANUAL_OVERRIDE=true

# ============================================================================
# DEVELOPMENT
# ============================================================================
DEBUG=false
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
